<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


        <ImageView
            android:id="@+id/chat_background"
            android:layout_width="match_parent"
            android:layout_height="@dimen/chat_background_height"
            android:scaleType="centerCrop"
            android:layout_margin="@dimen/CheckBox_layout_margin"
            android:src="@drawable/wallbackground"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toTopOf="@id/button_signIn"
            tools:ignore="MissingConstraints" />
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button_signIn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/AppCompatButton_button_signIn_layout_margin"
                android:layout_marginTop="@dimen/AppCompatButton_button_signIn_layout_marginTop"
                android:background="@drawable/customborder_sign_button"
                android:gravity="center"
                android:hint="@string/button_signin"
                android:padding="@dimen/AppCompatButton_button_signIn_padding"
                android:text="ورود به برنامه  "
                android:textColor="@color/white"
                android:textSize="@dimen/AppCompatButton_button_signIn_textSize"
                app:layout_constraintBottom_toBottomOf="parent"
                tools:ignore="MissingConstraints" />

</androidx.constraintlayout.widget.ConstraintLayout>






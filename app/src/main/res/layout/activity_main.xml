<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/chat_background"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:scaleType="centerCrop"
            android:layout_margin="1dp"
            android:src="@drawable/wallbackground"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toTopOf="@id/card_View"
            tools:ignore="MissingConstraints" />

        <androidx.cardview.widget.CardView
            android:id="@+id/card_View"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            app:cardBackgroundColor="@color/colorWhite"
            app:cardCornerRadius="8dp"
            app:cardElevation="10dp"
            app:cardMaxElevation="12dp"
            app:cardPreventCornerOverlap="true"
            app:cardUseCompatPadding="true"
            app:layout_constraintTop_toBottomOf="@id/chat_background"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            tools:ignore="MissingConstraints">

            <LinearLayout
                android:id="@+id/linear"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                tools:ignore="MissingConstraints">

                <TextView
                    android:id="@+id/textView_login"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:textColor="@color/black"
                    android:text="@string/textView_login"
                    android:textSize="24sp"

                    />

                <EditText
                    android:id="@+id/editText_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:autofillHints="@string/editText_email"
                    android:background="@drawable/customborder_email"
                    android:hint="@string/editText_email"
                    android:inputType="textEmailAddress"
                    android:maxLength="100"
                    android:maxLines="1"
                    android:padding="15dp"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/editText_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:autofillHints="@string/editText_email"
                    android:background="@drawable/customborder_password"
                    android:hint="@string/editText_password"
                    android:inputType="textPassword"
                    android:maxLength="100"
                    android:maxLines="1"
                    android:padding="15dp"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textView_forgetpassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:text="@string/textView_forgetpassword"
                    android:inputType="text"
                    android:maxLength="100"
                    android:maxLines="1"
                    android:padding="10dp"
                    android:textColor="@color/colorAccent"
                    android:textSize="15sp"
                    android:textStyle="bold" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>
        <LinearLayout
            android:id="@+id/login_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layoutDirection="rtl"
            app:layout_constraintTop_toBottomOf="@id/card_View"
            app:layout_constraintLeft_toLeftOf="@id/card_View"
            app:layout_constraintRight_toRightOf="@id/card_View"
            >

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button_signIn"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/customborder_sign_button"
                android:gravity="center"
                android:hint="@string/button_signin"
                android:padding="10dp"
                android:text="sign In "
                android:textColor="@color/white"
                android:textSize="15sp"
                app:layout_constraintTop_toBottomOf="@id/card_View"
                tools:ignore="MissingConstraints" />

            <CheckBox
                android:id="@+id/checkBox_remember"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_margin="10dp"
                android:gravity="center"
                android:layoutDirection="ltr"
                android:paddingLeft="10dp"
                android:text="@string/checkBox_rememberme" />

        </LinearLayout>

        <EditText
            android:id="@+id/editText_socialsignUp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:gravity="center"
            android:hint="@string/editText_socialsignup"
            app:layout_constraintTop_toBottomOf="@id/login_horizontal"
            android:textSize="15sp"
            android:textColor="@color/black"
            tools:ignore="MissingConstraints" />

        <LinearLayout
            android:id="@+id/logo_social"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/editText_socialsignUp"
            android:gravity="center"
            android:layout_marginTop="5dp"
            tools:ignore="MissingConstraints">

            <ImageView
                android:id="@+id/imageView_facebook"
                android:layout_width="50dp"
                android:layout_height="30dp"
                android:src="@drawable/facebooklogocircle"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/editText_socialsignUp"
                tools:ignore="MissingConstraints" />

            <ImageView
                android:id="@+id/imageView_google"
                android:layout_width="50dp"
                android:layout_height="30dp"
                android:src="@drawable/googlevectorcirclelogo"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toRightOf="@id/imageView_facebook"
                tools:ignore="MissingConstraints" />

            <ImageView
                android:id="@+id/imageView_linkdin"
                android:layout_width="50dp"
                android:layout_height="30dp"
                android:src="@drawable/linkedinlogo"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toLeftOf="@id/imageView_facebook"
                tools:ignore="MissingConstraints" />

            <ImageView
                android:id="@+id/imageView_twitter"
                android:layout_width="50dp"
                android:layout_height="30dp"
                android:src="@drawable/twitter"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteX="81dp"
                tools:layout_editor_absoluteY="434dp" />

        </LinearLayout>

        <TextView
            android:id="@+id/textView_addnewuser"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="@string/textView_addnewuser"
            app:layout_constraintTop_toBottomOf="@id/logo_social"
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="#080883"
            tools:ignore="MissingConstraints" />
        <TextView
            android:id="@+id/responseText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:ignore="MissingConstraints" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>
